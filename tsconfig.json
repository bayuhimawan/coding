{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "types",
    "removeComments": false,
    "resolveJsonModule": true,
    "strictNullChecks": true,
